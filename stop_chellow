GUNICORN_PID_FILE=${CHELLOW_HOME}/gunicorn/pid
if [ -f ${GUNICORN_PID_FILE} ]; then
  if kill `cat ${GUNICORN_PID_FILE}` ; then
    while [ -f ${GUNICORN_PID_FILE} ]
      do
        sleep 1
        echo "Gunicorn pid file still there..."
      done
  fi
fi

WATCHDOG_PID_FILE=${CHELLOW_HOME}/gunicorn/watchdog.pid
if [ -f ${WATCHDOG_PID_FILE} ]; then
  kill `cat ${WATCHDOG_PID_FILE}`
fi
