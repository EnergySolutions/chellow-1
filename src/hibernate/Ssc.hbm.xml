<hibernate-mapping package="net.sf.chellow.physical">
	<class name="Ssc" table="ssc" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">ssc_id_sequence</param>
			</generator>
		</id>
		<property type="integer" name="code" column="code" unique="true"
			not-null="true" />
		<property type="string" name="description" column="description"
			not-null="true" />
		<property type="boolean" name="isImport" column="is_import"
			not-null="true" />
		<property type="timestamp" name="validFrom" not-null="true">
			<column name="valid_from"
				sql-type="timestamp with time zone" />
		</property>
		<property type="timestamp" name="validTo">
			<column name="valid_to" sql-type="timestamp with time zone" />
		</property>
		<set name="measurementRequirements" inverse="true"
			cascade="all,delete-orphan" order-by="tpr_id">
			<key column="ssc_id" />
			<one-to-many class="MeasurementRequirement" />
		</set>
	</class>
</hibernate-mapping>

