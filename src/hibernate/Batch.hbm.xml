<hibernate-mapping package="net.sf.chellow.billing">
	<class name="Batch" table="batch" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">batch_id_sequence</param>
			</generator>
		</id>
		<many-to-one name="contract" class="Contract" column="contract_id"
			unique-key="contract-reference" foreign-key="batch_contract_id_fkey" />
		<property type="string" name="reference" column="reference"
			not-null="true" unique-key="contract-reference" />
		<property type="string" name="description" not-null="true" />
	</class>
</hibernate-mapping>

