<hibernate-mapping
	package="net.sf.chellow.physical">
	<joined-subclass extends="Snag" name="ChannelSnag"
		table="channel_snag" lazy="true">
		<key column="snag_id" foreign-key="fkey_channel_snag_snag"/>
		<many-to-one name="channel" class="Channel" column="channel_id" foreign-key="fkey_snag_channel_channel"/>
		<component name="startDate" class="HhEndDate">
			<property name="date" type="timestamp" not-null="true" index="start_date_idx">
				<column name="start_date"
					sql-type="timestamp with time zone" />
			</property>
		</component>
		<component name="finishDate" class="HhEndDate">
			<property name="date" type="timestamp" not-null="true" index="finish_date_idx">
				<column name="finish_date"
					sql-type="timestamp with time zone" />
			</property>
		</component>
	</joined-subclass>
</hibernate-mapping>