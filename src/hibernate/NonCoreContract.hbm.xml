<hibernate-mapping package="net.sf.chellow.billing">
	<joined-subclass extends="Contract" name="NonCoreContract"
		table="non_core_contract" lazy="true">
		<key column="non_core_id"
			foreign-key="fkey_non_core_contract_contract" />
		<many-to-one name="party" class="Provider"
			column="provider_id" foreign-key="fkey_non_core_contract_provider" />
	</joined-subclass>
</hibernate-mapping>