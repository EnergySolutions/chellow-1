<hibernate-mapping package="net.sf.chellow.physical">
	<class name="Llfc" table="llfc" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">llfc_id_sequence</param>
			</generator>
		</id>
		<many-to-one name="dso" class="net.sf.chellow.billing.Provider"
			column="dso_id" not-null="true" foreign-key="fkey_llfc_dso" />
		<component name="code" class="LlfcCode">
			<property type="integer" name="integer" column="code"
				not-null="true" />
		</component>
		<property name="description" column="description"
			not-null="true" />
		<many-to-one name="voltageLevel" class="VoltageLevel"
			column="voltage_level_id" not-null="true"
			foreign-key="fkey_llfc_voltage_level" />
		<property type="boolean" name="isSubstation"
			column="is_substation" />
		<property type="boolean" name="isImport" column="is_import" />
		<property type="timestamp" name="validFrom" not-null="true">
			<column name="valid_from"
				sql-type="timestamp with time zone" />
		</property>
		<property type="timestamp" name="validTo">
			<column name="valid_to" sql-type="timestamp with time zone" />
		</property>
	</class>
</hibernate-mapping>