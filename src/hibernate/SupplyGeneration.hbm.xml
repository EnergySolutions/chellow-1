<hibernate-mapping package="net.sf.chellow.physical">
	<class name="SupplyGeneration" table="supply_generation">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">
					supply_generation_id_sequence
				</param>
			</generator>
		</id>
		<many-to-one name="supply" class="Supply" column="supply_id"
			not-null="true" foreign-key="fkey_supply_generation_supply" />
			
		<set name="siteSupplyGenerations" inverse="true" cascade="all,delete-orphan"
			order-by="site_id">
			<key column="supply_generation_id" />
			<one-to-many class="SiteSupplyGeneration" />
		</set>
		
		<many-to-one name="mopContract" class="net.sf.chellow.billing.MopContract"
			column="mop_contract_id" foreign-key="fkey_mpan_mop_contract" not-null="true" />
			
		<property type="string" name="mopAccount" column="mop_account" not-null="true" />
		
		<many-to-one name="hhdcContract" class="net.sf.chellow.billing.HhdcContract"
			column="hhdc_contract_id" foreign-key="fkey_mpan_hhdc_contract" not-null="true" />
			
		<property type="string" name="hhdcAccount" column="hhdc_account" not-null="true"/>
		
		<many-to-one name="importMpan" class="Mpan" column="import_mpan_id"
			foreign-key="fkey_supply_generation_import_mpan" />
			
		<many-to-one name="exportMpan" class="Mpan" column="export_mpan_id"
			foreign-key="fkey_supply_generation_export_mpan" />
			
		<component name="startDate" class="HhStartDate">
			<property type="timestamp" name="date" index="supply_generation__start_date__idx">
				<column name="start_date" sql-type="timestamp with time zone" />
			</property>
		</component>
		
		<component name="finishDate" class="HhStartDate">
			<property type="timestamp" name="date" index="supply_generation__finish_date__idx">
				<column name="finish_date" sql-type="timestamp with time zone" />
			</property>
		</component>
		
		<many-to-one name="pc" class="Pc" column="pc_id" not-null="true"
			foreign-key="fkey_generation__pc" />
			
		<property type="string" name="meterSerialNumber" column="meter_serial_number"
			not-null="true" />
			
		<many-to-one name="mtc" class="Mtc" column="mtc_id"
			not-null="true" foreign-key="fkey_generation__mtc" />
			
		<many-to-one name="cop" class="Cop" column="cop_id"
			not-null="true" foreign-key="fkey_generation__cop" />
			
		<many-to-one name="ssc" class="Ssc" column="ssc_id"
			foreign-key="fkey_generation__ssc" />
			
		<set name="mpans" inverse="true" lazy="true" cascade="all,delete-orphan">
			<key column="supply_generation_id" />
			<one-to-many class="Mpan" />
		</set>
		
		<set name="channels" inverse="true" cascade="all,delete-orphan"
			order-by="is_import desc, is_kwh desc">
			<key column="supply_generation_id" />
			<one-to-many class="Channel" />
		</set>
	</class>
</hibernate-mapping>

