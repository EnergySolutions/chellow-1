<hibernate-mapping package="net.sf.chellow.billing">
	<class name="Account" table="account" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">account_id_sequence</param>
			</generator>
		</id>
		<many-to-one name="organization"
			class="net.sf.chellow.physical.Organization" column="organization_id"
			unique-key="organization-provider-name" foreign-key="fkey_account_organization" />
		<many-to-one name="provider" class="Provider"
			column="provider_id" not-null="true"
			unique-key="organization-provider-name" foreign-key="fkey_account_provider"/>
		<property type="string" name="reference" column="reference"
			not-null="true" unique-key="organization-provider-name" />
	</class>
</hibernate-mapping>

