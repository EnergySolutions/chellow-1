<hibernate-mapping package="net.sf.chellow.billing">
	<class name="Contract" table="contract" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">contract_id_sequence</param>
			</generator>
		</id>

		<many-to-one name="role" class="net.sf.chellow.physical.MarketRole"
			column="market_role_id" foreign-key="fkey_contract_market_role"
			not-null="true" unique-key="contract_unique" />
			
		<property name="isCore" column="is_core" type="boolean"
			not-null="true" />
			
		<property type="string" name="name" column="name" not-null="true"
			unique-key="contract_unique" />

		<property type="string" name="chargeScript" not-null="true">
			<column name="charge_script" sql-type="text" />
		</property>

		<property name="properties" type="string" not-null="true">
			<column name="properties" sql-type="text" />
		</property>

		<property name="state" type="string" not-null="true">
			<column name="state" sql-type="text" />
		</property>

		<many-to-one name="startRateScript" class="RateScript"
			column="start_rate_script_id" foreign-key="fkey_contract_start_rate_script" />

		<many-to-one name="finishRateScript" class="RateScript"
			column="finish_rate_script_id" foreign-key="fkey_contract_finish_rate_script" />

		<many-to-one name="party" class="Party" column="party_id"
			foreign-key="fkey_contract_party" not-null="true" />

		<set name="rateScripts" inverse="true" cascade="all,delete-orphan"
			order-by="start_date">
			<key column="contract_id" />
			<one-to-many class="RateScript" />
		</set>

	</class>
</hibernate-mapping>