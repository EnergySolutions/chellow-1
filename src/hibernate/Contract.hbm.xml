<hibernate-mapping package="net.sf.chellow.billing">
	<class name="Contract" table="contract" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">contract_id_sequence</param>
			</generator>
		</id>
		<property type="string" name="name" column="name"
			not-null="true" />
		<many-to-one name="startRateScript" class="RateScript"
			column="start_rate_script_id"
			foreign-key="fkey_contract_start_rate_script" />
		<many-to-one name="finishRateScript" class="RateScript"
			column="finish_rate_script_id"
			foreign-key="fkey_contract_finish_rate_script" />
		<property type="string" name="chargeScript"
			column="charge_script" />
		<set name="rateScripts" inverse="true"
			cascade="all,delete-orphan" order-by="start_date">
			<key column="contract_id" />
			<one-to-many class="RateScript" />
		</set>
	</class>
</hibernate-mapping>