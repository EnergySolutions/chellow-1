<hibernate-mapping package="net.sf.chellow.physical">
	<class name="Llf" table="llf" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">llf_id_sequence</param>
			</generator>
		</id>
		<many-to-one name="dso" class="Dso" column="dso_id"
			not-null="true" unique-key="llf_unique" foreign-key="fkey_llf_dso" />
		<component name="code" class="LlfCode">
			<property type="integer" name="integer" column="code"
				not-null="true" unique-key="llf_unique" />
		</component>
		<property name="description" column="description"
			not-null="true" />
		<many-to-one name="voltageLevel" class="VoltageLevel"
			column="voltage_level_id" not-null="true"
			foreign-key="fkey_llf_voltage_level" />
		<property type="boolean" name="isSubstation"
			column="is_substation" />
		<property type="boolean" name="isImport" column="is_import" />
	</class>
</hibernate-mapping>

