<hibernate-mapping package="net.sf.chellow.physical">
	<class name="Snag" table="snag" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">snag_id_sequence</param>
			</generator>
		</id>
		<property name="dateCreated" type="timestamp" not-null="true">
			<column name="date_created"
				sql-type="timestamp with time zone" />
		</property>
		<property name="dateResolved" type="timestamp">
			<column name="date_resolved"
				sql-type="timestamp with time zone" />
		</property>
		<property name="description" column="description" type="string"
			not-null="true" />
		<property name="progress" column="progress" type="string"
			not-null="true" />
		<property name="isIgnored" type="boolean" not-null="true">
			<column name="is_ignored" default="false" />
		</property>
	</class>
</hibernate-mapping>
