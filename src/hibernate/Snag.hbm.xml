<hibernate-mapping package="net.sf.chellow.physical">
	<class name="Snag" table="snag" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">snag_id_sequence</param>
			</generator>
		</id>

		<property name="dateCreated" type="timestamp" not-null="true">
			<column name="date_created" sql-type="timestamp with time zone" />
		</property>

		<property name="description" column="description" type="string"
			not-null="true" index="description_idx" />

		<property name="isIgnored" type="boolean" not-null="true">
			<column name="is_ignored" default="false" index="is_ignored_idx" />
		</property>
		<many-to-one name="channel" class="Channel" column="channel_id"
			foreign-key="fkey_snag_channel_channel" />
		<many-to-one name="site" class="Site" column="site_id"
			foreign-key="fkey_site_snag_site" />
		<component name="startDate" class="HhStartDate">
			<property name="date" type="timestamp" not-null="true"
				index="channel_snag_start_date_idx">
				<column name="start_date" sql-type="timestamp with time zone" />
			</property>
		</component>
		<component name="finishDate" class="HhStartDate">
			<property name="date" type="timestamp" not-null="true"
				index="channel_snag_finish_date_idx">
				<column name="finish_date" sql-type="timestamp with time zone" />
			</property>
		</component>
	</class>
</hibernate-mapping>
