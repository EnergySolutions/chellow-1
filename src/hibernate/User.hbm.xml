<hibernate-mapping package="net.sf.chellow.physical">
	<class name="User" table="`user`" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">user_id_sequence</param>
			</generator>
		</id>
		<component name="emailAddress"
			class="net.sf.chellow.monad.types.EmailAddress">
			<property name="address" column="email_address"
				not-null="true" unique="true" />
		</component>
		<property type="string" name="passwordDigest"
			column="password_digest" not-null="true" />
		<many-to-one name="role" class="UserRole" column="role_id"
			not-null="true" foreign-key="fkey_user__user_role" />
		<many-to-one name="party" class="net.sf.chellow.billing.Party"
			column="party_id" foreign-key="fkey_user__party" />
	</class>
</hibernate-mapping>

