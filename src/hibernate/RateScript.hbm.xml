<hibernate-mapping package="net.sf.chellow.billing">
	<class name="RateScript" table="rate_script" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">rate_script_id_sequence</param>
			</generator>
		</id>
		<many-to-one name="contract" class="Contract" column="contract_id" foreign-key="fkey_rate_script_contract"/>
		<component name="startDate"
			class="net.sf.chellow.physical.HhStartDate">
			<property type="timestamp" name="date">
				<column name="start_date"
					sql-type="timestamp with time zone" not-null="true" />
			</property>
		</component>
		<component name="finishDate"
			class="net.sf.chellow.physical.HhStartDate">
			<property type="timestamp" name="date">
				<column name="finish_date"
					sql-type="timestamp with time zone" />
			</property>
		</component>
		<property type="string" name="script" column="script"/>
	</class>
</hibernate-mapping>

