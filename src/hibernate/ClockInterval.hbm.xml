<hibernate-mapping package="net.sf.chellow.physical">
	<class name="ClockInterval" table="clock_interval" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">
					clock_interval_id_sequence
				</param>
			</generator>
		</id>
		<many-to-one name="tpr" class="Tpr" column="tpr_id"
			foreign-key="fkey_clock_interval_tpr" />
		<property type="integer" name="dayOfWeek" column="day_of_week"
			not-null="true" />
		<property type="integer" name="startDay" column="start_day"
			not-null="true" />
		<property type="integer" name="startMonth" column="start_month"
			not-null="true" />
		<property type="integer" name="endDay" column="end_day"
			not-null="true" />
		<property type="integer" name="endMonth" column="end_month"
			not-null="true" />
		<property type="integer" name="startHour" column="start_hour"
			not-null="true" />
		<property type="integer" name="startMinute"
			column="start_minute" not-null="true" />
		<property type="integer" name="endHour" column="end_hour"
			not-null="true" />
		<property type="integer" name="endMinute" column="end_minute"
			not-null="true" />
	</class>
</hibernate-mapping>

