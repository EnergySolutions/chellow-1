<hibernate-mapping package="net.sf.chellow.physical">
	<class name="RegisterRead" table="register_read">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">register_read_id_sequence</param>
			</generator>
		</id>
		<many-to-one name="mpan" class="Mpan" column="mpan_id"
			not-null="true" foreign-key="fkey_mpan__register_read" />
		<many-to-one name="invoice"
			class="net.sf.chellow.billing.Invoice" column="invoice_id"
			not-null="true" foreign-key="fkey_invoice__register_read" />
		<many-to-one name="tpr" class="Tpr" column="tpr_id"
			not-null="true" foreign-key="fkey_tpr__register_read" />
		<component name="presentDate"
			class="net.sf.chellow.billing.DayFinishDate">
			<property name="date" type="timestamp" not-null="true">
				<column name="present_date"
					sql-type="timestamp with time zone" />
			</property>
		</component>
		<property type="float" name="presentValue"
			column="present_value" not-null="true" />
		<many-to-one name="presentType" class="ReadType"
			column="present_type_id" not-null="true"
			foreign-key="fkey_present_type__register_read" />
		<component name="previousDate"
			class="net.sf.chellow.billing.DayFinishDate">
			<property name="date" type="timestamp" not-null="true">
				<column name="previous_date"
					sql-type="timestamp with time zone" />
			</property>
		</component>
		<property type="float" name="previousValue"
			column="previous_value" not-null="true" />
		<many-to-one name="previousType" class="ReadType"
			column="previous_type_id" not-null="true"
			foreign-key="fkey_previous_type__register_read" />
		<component name="units" class="Units">
			<property name="int" column="units" />
		</component>
	</class>
</hibernate-mapping>

