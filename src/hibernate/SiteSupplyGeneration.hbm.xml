<hibernate-mapping package="net.sf.chellow.physical">
	<class name="SiteSupplyGeneration" table="site_supply_generation"
		lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">
					site_supply_generation_id_sequence
				</param>
			</generator>
		</id>
		<many-to-one name="supplyGeneration" class="SupplyGeneration"
			column="supply_generation_id" not-null="true"
			foreign-key="fkey_site_supply_generation_supply_generation" />
		<many-to-one name="site" class="Site" column="site_id"
			not-null="true" foreign-key="fkey_site_supply_generation_site" />
		<property name="isPhysical" column="is_physical"
			not-null="true" />
	</class>
</hibernate-mapping>