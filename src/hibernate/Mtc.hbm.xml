<hibernate-mapping package="net.sf.chellow.physical">
	<class name="Mtc" table="mtc" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">mtc_id_sequence</param>
			</generator>
		</id>
		<many-to-one name="dno" class="net.sf.chellow.billing.Party"
			column="dno_id" unique-key="mtc_unique" foreign-key="fkey_mtc_dno" />
		<property type="integer" name="code" column="code"
			unique-key="mtc_unique" />
		<property type="string" name="description" />
		<property type="boolean" name="hasRelatedMetering" column="has_related_metering"
			not-null="true" />
		<property type="boolean" name="hasComms" column="has_comms" />
		<property type="boolean" name="isHh" column="is_hh" />

		<many-to-one name="meterType" class="MeterType" column="meter_type_id"
			foreign-key="fkey_mtc_meter_type" />
		<many-to-one name="paymentType" class="MeterPaymentType"
			column="payment_type_id" foreign-key="fkey_mtc_payment_type" />
		<property type="integer" name="tprCount" column="tpr_count" />
		<property type="timestamp" name="validFrom" not-null="true">
			<column name="valid_from" sql-type="timestamp with time zone" />
		</property>
		<property type="timestamp" name="validTo">
			<column name="valid_to" sql-type="timestamp with time zone" />
		</property>
	</class>
</hibernate-mapping>