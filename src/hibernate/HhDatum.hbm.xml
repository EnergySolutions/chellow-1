<hibernate-mapping package="net.sf.chellow.physical">
	<class name="HhDatum" table="hh_datum" lazy="true">
		<id name="id">
			<generator class="identity" />
		</id>

		<many-to-one name="channel" class="Channel" column="channel_id"
			foreign-key="fkey_hh_datum_channel" unique-key="channel_date_key"
			not-null="true" />

		<component name="startDate" class="HhStartDate">
			<property name="date" type="timestamp" not-null="true"
				unique-key="channel_date_key">
				<column name="start_date" sql-type="timestamp with time zone"
					index="hh_datum_start_date_idx" />
			</property>
		</component>

		<property name="value" type="big_decimal" not-null="true">
			<column name="value" sql-type="numeric" />
		</property>

		<property name="status" column="status" type="character"
			not-null="true" />

		<property name="lastModified" type="timestamp">
			<column name="last_modified" sql-type="timestamp with time zone"
				not-null="true" index="hh_datum_last_modified_idx" />
		</property>
	</class>
</hibernate-mapping>