<hibernate-mapping package="net.sf.chellow.physical">
	<class name="HhDatum" table="hh_datum" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">hh_datum_id_sequence</param>
			</generator>
		</id>
		<many-to-one name="channel" class="Channel" column="channel_id"
			unique-key="hh_datum_unique" foreign-key="fkey_hh_datum_channel" />
		<component name="endDate" class="HhEndDate">
			<property name="date" type="timestamp" not-null="true"
				unique-key="hh_datum_unique">
				<column name="end_date"
					sql-type="timestamp with time zone" />
			</property>
		</component>
		<property name="value" column="value" type="float"
			not-null="true" />
		<property name="status" column="status" type="character" />
	</class>
</hibernate-mapping>

