<hibernate-mapping package="net.sf.chellow.physical">
	<class name="MpanTop" table="mpan_top">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">mpan_top_id_sequence</param>
			</generator>
		</id>
		<many-to-one name="profileClass" class="ProfileClass"
			column="profile_class_id" not-null="true"
			foreign-key="fkey_mpan__profile_class" unique-key="mpan_top_unique" />
		<many-to-one name="meterTimeswitch" class="MeterTimeswitch"
			column="meter_timeswitch_id" not-null="true"
			foreign-key="fkey_mpan_meter_timeswitch"
			unique-key="mpan_top_unique" />
		<many-to-one name="llf" class="Llf"
			column="llf_id" not-null="true"
			foreign-key="fkey_mpan_llf"
			unique-key="mpan_top_unique" />
		<set name="sscs" lazy="true" cascade="delete-orphan"
			table="mpan_top_ssc">
			<key column="mpan_top_id"
				foreign-key="fkey_mpan_top_ssc__mpan_top" />
			<many-to-many column="ssc_id" class="Ssc" />
		</set>
	</class>
</hibernate-mapping>