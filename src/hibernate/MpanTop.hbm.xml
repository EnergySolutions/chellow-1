<hibernate-mapping package="net.sf.chellow.physical">
	<class name="MpanTop" table="mpan_top">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">mpan_top_id_sequence</param>
			</generator>
		</id>
		<many-to-one name="pc" class="Pc" column="pc_id" not-null="true"
			foreign-key="fkey_mpan__pc" />
		<many-to-one name="mtc" class="Mtc" column="mtc_id"
			not-null="true" foreign-key="fkey_mpan_mtc" />
		<many-to-one name="llfc" class="Llfc" column="llfc_id"
			not-null="true" foreign-key="fkey_mpan_llfc" />
		<many-to-one name="ssc" class="Ssc" column="ssc_id"
			foreign-key="fkey_mpan_ssc" />
		<property type="timestamp" name="validFrom" column="valid_from"
			not-null="true" />
		<property type="timestamp" name="validTo" column="valid_to" />
	</class>
</hibernate-mapping>