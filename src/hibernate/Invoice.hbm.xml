<hibernate-mapping package="net.sf.chellow.billing">
	<class name="Invoice" table="invoice" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">invoice_id_sequence</param>
			</generator>
		</id>
		<many-to-one name="batch" class="Batch" column="batch_id"
			foreign-key="fkey_invoice_batch" />
		<many-to-one name="bill" class="Bill" column="bill_id"
			foreign-key="fkey_invoice_bill" />
		<component name="issueDate"
			class="DayStartDate">
			<property type="timestamp" name="date">
				<column name="issue_date"
					sql-type="timestamp with time zone" />
			</property>
		</component>
		<component name="startDate"
			class="DayStartDate">
			<property type="timestamp" name="date">
				<column name="start_date"
					sql-type="timestamp with time zone" />
			</property>
		</component>
		<component name="finishDate"
			class="DayFinishDate">
			<property type="timestamp" name="date">
				<column name="finish_date"
					sql-type="timestamp with time zone" />
			</property>
		</component>
		<property type="double" name="net" column="net" not-null="true" />
		<property type="double" name="vat" column="vat" not-null="true" />
		<property type="string" name="invoiceText" column="invoice_text"
			not-null="true" />
		<property type="string" name="accountText" column="account_text"
			not-null="true" />
		<property type="string" name="mpanText" column="mpan_text"
			not-null="true" />
		<property type="integer" name="status" column="status"
			not-null="true" />
		<set name="reads" inverse="true" lazy="true"
			cascade="all,delete-orphan">
			<key column="invoice_id" />
			<one-to-many class="net.sf.chellow.physical.RegisterRead" />
		</set>
	</class>
</hibernate-mapping>

