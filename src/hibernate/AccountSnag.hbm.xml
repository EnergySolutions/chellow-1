<hibernate-mapping package="net.sf.chellow.billing">
	<joined-subclass extends="net.sf.chellow.physical.Snag"
		name="AccountSnag" table="account_snag"
		lazy="true">
		<key column="snag_id" foreign-key="fkey_account_snag_snag"/>
		<many-to-one name="account" class="Account" column="account_id" not-null="true" foreign-key="fkey_snag_account"/>
		<component name="startDate" class="net.sf.chellow.physical.HhEndDate">
			<property name="date" type="timestamp" not-null="true"
				index="start_date_idx">
				<column name="start_date"
					sql-type="timestamp with time zone" />
			</property>
		</component>
		<component name="finishDate" class="net.sf.chellow.physical.HhEndDate">
			<property name="date" type="timestamp" not-null="true"
				index="finish_date_idx">
				<column name="finish_date"
					sql-type="timestamp with time zone" />
			</property>
		</component>
		<many-to-one name="service" class="Service" column="service_id"
			not-null="true" foreign-key="fkey_account_snag_service"/>
	</joined-subclass>
</hibernate-mapping>

