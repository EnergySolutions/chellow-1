<hibernate-mapping package="net.sf.chellow.physical">
	<class name="MeterPaymentType" table="meter_payment_type" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">
					meter_payment_type_id_sequence
				</param>
			</generator>
		</id>
		<property type="string" name="code" not-null="true" />

		<property type="string" name="description" not-null="true" />

		<property type="timestamp" name="validFrom" column="valid_from"
			not-null="true" />
		<property type="timestamp" name="validTo" column="valid_to" />
	</class>
</hibernate-mapping>

