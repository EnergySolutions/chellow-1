<hibernate-mapping package="net.sf.chellow.physical">
	<class name="Tpr" table="tpr">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">tpr_id_sequence</param>
			</generator>
		</id>
		<property type="string" name="code" column="code"
			not-null="true" unique-key="tpr-unique" />
		<property type="boolean" name="isTeleswitch"
			column="is_teleswitch" not-null="true" />
		<property type="boolean" name="isGmt" column="is_gmt"
			not-null="true" />
		<set name="clockIntervals" inverse="true"
			cascade="all,delete-orphan" order-by="id">
			<key column="tpr_id" />
			<one-to-many class="ClockInterval" />
		</set>
		<set name="measurementRequirements" inverse="true"
			cascade="all,delete-orphan" order-by="id">
			<key column="tpr_id" />
			<one-to-many class="MeasurementRequirement" />
		</set>
	</class>
</hibernate-mapping>

