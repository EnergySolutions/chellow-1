<hibernate-mapping package="net.sf.chellow.physical">
	<class name="Tpr" table="tpr">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">tpr_id_sequence</param>
			</generator>
		</id>
		<property type="integer" name="code" column="code"
			not-null="true" unique-key="register_tpr" />
		<set name="sscs" table="ssc_tpr" cascade="all,delete-orphan">
			<key column="tpr_id" />
			<many-to-many column="ssc_id" class="Ssc" />
		</set>
		<set name="lines" inverse="true" cascade="all,delete-orphan"
			order-by="month_from">
			<key column="tpr_id" />
			<one-to-many class="TprLine" />
		</set>

	</class>
</hibernate-mapping>

