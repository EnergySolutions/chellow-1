<hibernate-configuration>
	<session-factory name="java:hibernate/SessionFactory">
		<property name="connection.datasource">java:comp/env/jdbc/chellow</property>
		<property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>

		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">
			org.hibernate.cache.NoCacheProvider
		</property>

		<property name="hibernate.jdbc.batch_size">20</property>
		<property name="current_session_context_class">managed</property>

		<!-- Mapping files -->
		<mapping resource="hibernate/Configuration.hbm.xml" />
		<mapping resource="hibernate/Party.hbm.xml" />
		<mapping resource="hibernate/User.hbm.xml" />
		<mapping resource="hibernate/RateScript.hbm.xml" />
		<mapping resource="hibernate/Participant.hbm.xml" />
		<mapping resource="hibernate/MarketRole.hbm.xml" />
		<mapping resource="hibernate/Contract.hbm.xml" />
		<mapping resource="hibernate/Report.hbm.xml" />
		<mapping resource="hibernate/UserRole.hbm.xml" />
	</session-factory>
</hibernate-configuration>
