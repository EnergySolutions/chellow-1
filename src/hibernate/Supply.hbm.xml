<hibernate-mapping package="net.sf.chellow.physical">
	<class name="Supply" table="supply" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">supply_id_sequence</param>
			</generator>
		</id>
		<property name="name" column="name" />
		<many-to-one name="source" class="Source" column="source_id"
			not-null="true" foreign-key="fkey_supply_source" />
		<many-to-one name="generatorType" class="GeneratorType" column="generator_type_id"
			foreign-key="fkey_supply_generator_type" />
		<many-to-one name="gspGroup" class="GspGroup" column="gsp_group_id"
			foreign-key="fkey_supply_generation__gsp_group" />
		<set name="generations" inverse="true"
			cascade="all,delete-orphan" order-by="start_date desc">
			<key column="supply_id" />
			<one-to-many class="SupplyGeneration" />
		</set>
		<set name="mpanCores" inverse="true" lazy="true"
			cascade="all,delete-orphan">
			<key column="supply_id" />
			<one-to-many class="MpanCore" />
		</set>
	</class>
</hibernate-mapping>