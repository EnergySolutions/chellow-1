<hibernate-mapping package="net.sf.chellow.physical">
	<class name="Mpan" table="mpan">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">mpan_id_sequence</param>
			</generator>
		</id>
		<many-to-one name="supplyGeneration" class="SupplyGeneration"
			column="supply_generation_id" not-null="true" foreign-key="fkey_mpan_supply_generation" />
		<many-to-one name="llfc" class="Llfc" column="llfc_id"
			not-null="true" foreign-key="fkey_mpan_llfc" />
		<many-to-one name="core" class="MpanCore" column="core_id"
			not-null="true" foreign-key="fkey_mpan__core" />
		<many-to-one name="supplierContract"
			class="net.sf.chellow.billing.SupplierContract" column="supplier_contract_id"
			foreign-key="fkey_mpan_supplier_contract" />
		<property type="string" name="supplierAccount" column="supplier_account"
			not-null="true" />
		<property name="agreedSupplyCapacity" column="agreed_supply_capacity"
			not-null="true" />
	</class>
</hibernate-mapping>