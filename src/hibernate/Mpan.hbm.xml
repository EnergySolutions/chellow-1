<hibernate-mapping package="net.sf.chellow.physical">
	<class name="Mpan" table="mpan">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">mpan_id_sequence</param>
			</generator>
		</id>
		<many-to-one name="supplyGeneration" class="SupplyGeneration"
			column="supply_generation_id" not-null="true"
			foreign-key="fkey_mpan_supply_generation" />
		<many-to-one name="mpanTop" class="MpanTop" column="mpan_top_id"
			not-null="true" foreign-key="fkey_mpan__mpan_top" />
		<many-to-one name="mpanCore" class="MpanCore"
			column="mpan_core_id" not-null="true"
			foreign-key="fkey_mpan_mpan_core" />
		<many-to-one name="mopAccount"
			class="net.sf.chellow.billing.Account" column="mop_account_id"
			foreign-key="fkey_mpan_mop_account" />
		<many-to-one name="hhdcsAccount"
			class="net.sf.chellow.billing.Account" column="hhdcs_account_id"
			foreign-key="fkey_mpan_hhdcs_account" />
		<many-to-one name="hhdceAccount"
			class="net.sf.chellow.billing.Account" column="hhdce_account_id"
			foreign-key="fkey_mpan_hhdce_account" />
		<many-to-one name="supplierAccount"
			class="net.sf.chellow.billing.Account" column="supplier_account_id"
			foreign-key="fkey_mpan_supplier_account" />
		<property type="boolean" name="hasImportKwh"
			column="has_import_kwh" not-null="true" />
		<property type="boolean" name="hasImportKvarh"
			column="has_import_kvarh" not-null="true" />
		<property type="boolean" name="hasExportKwh"
			column="has_export_kwh" not-null="true" />
		<property type="boolean" name="hasExportKvarh"
			column="has_export_kvarh" not-null="true" />
		<property name="agreedSupplyCapacity"
			column="agreed_supply_capacity" not-null="true" />
		<!-- 
		<set name="invoiceMpans" inverse="true"
			cascade="all,delete-orphan" order-by="invoice_id">
			<key column="mpan_id" />
			<one-to-many class="InvoiceMpan" />
		</set>
-->
	</class>
</hibernate-mapping>