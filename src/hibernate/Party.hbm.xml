<hibernate-mapping package="net.sf.chellow.billing">
	<class name="Party" table="party" lazy="true">
		<id name="id">
			<generator class="identity"/>
		</id>
		<many-to-one name="role" class="net.sf.chellow.physical.MarketRole"
			column="market_role_id" foreign-key="party_market_role_id_fkey" />

		<many-to-one name="participant" class="net.sf.chellow.physical.Participant"
			column="participant_id" foreign-key="party_participant_id_fkey" />

		<property name="name" column="name" not-null="true" />

		<property type="timestamp" name="validFrom" column="valid_from"
			not-null="true" />

		<property type="timestamp" name="validTo" column="valid_to" />

		<property name="dnoCode" column="dno_code" />
	</class>
</hibernate-mapping>

