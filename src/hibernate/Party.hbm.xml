<hibernate-mapping package="net.sf.chellow.billing">
	<class name="Party" table="party" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">party_id_sequence</param>
			</generator>
		</id>
		<many-to-one name="role"
			class="net.sf.chellow.physical.MarketRole" column="role_id"
			foreign-key="fkey_party_role" />
		<many-to-one name="participant"
			class="net.sf.chellow.physical.Participant" column="participant_id"
			foreign-key="fkey_party_participant" />
		<property name="name" column="name" not-null="true" />
		<property type="timestamp" name="validFrom" column="valid_from"
			not-null="true" />
		<property type="timestamp" name="validTo" column="valid_to" />
	</class>
</hibernate-mapping>

