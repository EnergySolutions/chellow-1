<hibernate-mapping package="net.sf.chellow.physical">
	<class name="Role" table="role" lazy="true">
		<id name="id">
			<generator class="sequence">
				<param name="sequence">role_id_sequence</param>
			</generator>
		</id>
		<property name="name" column="name" />
		<set name="permissions" inverse="true" lazy="true"
			cascade="all,delete-orphan">
			<key column="role_id" />
			<one-to-many class="Permission" />
		</set>
	</class>
</hibernate-mapping>

