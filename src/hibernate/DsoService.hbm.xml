<hibernate-mapping package="net.sf.chellow.billing">
	<joined-subclass extends="Service" name="DsoService"
		table="dso_service" lazy="true">
		<key column="service_id" foreign-key="fkey_dso_service_service" />
		<many-to-one name="provider" class="net.sf.chellow.physical.Dso"
			column="provider_id" foreign-key="fkey_dso_service_provider" />
	</joined-subclass>
</hibernate-mapping>